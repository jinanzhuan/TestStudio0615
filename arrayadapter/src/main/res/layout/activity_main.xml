<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.guigu.arrayadapter.MainActivity">

    <Button
        android:onClick="to_Array_List"
        android:id="@+id/btn_arraylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="to_Array_List"
         />
    <Button
        android:onClick="to_Simple_List"
        android:id="@+id/btn2_shimple_list"
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="to_Simple_List"
         />
    <Button
        android:onClick="to_Base_List"
        android:id="@+id/btn3_base_list"
        android:layout_marginTop="160dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="to_Base_List"
         />
</RelativeLayout>
